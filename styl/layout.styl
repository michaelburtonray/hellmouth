body {
  background: url("/img/hell-bg-02b.jpg");
  font-family: sans-serif;
  background-size: cover;
	color: yellow;
  margin: 1em;
	text-align: center;
}

h1,
h2,
h3,
h4,
h5 {
  font-family: 'flame_on_blackregular', fantasy;
  font-variant: small-caps;
  font-weight: normal;
}

.video_embed {
  display: block;
  margin: -100px auto 0;
  position: relatitve;
  z-index: 2;
  width: 320px;
  height: 180px;
  @media $tablet_portrait {
    width: 640px;
    height: 360px;
  }
  @media $tablet_landscape {
    width: 960px;
    height: 540px;
  }
  @media $desktop {
    width: 1280px;
    height: 720px;
  }
}

.purchase_iframe {
  display: block;
  margin: 1em auto;
}
#logo {
  max-width: 748px;
  width: 100%;
}
#monster1 {
  transform-origin: 50% 80%;
  animation: wiggle linear 2s infinite alternate;
  position: relative;
  z-index: -1;
}
.polycode-logo {
  width: 500px;
  max-width: 100%;
}
.humble-bundle-logo {
  width: 318px;
  max-width: 100%;
  max-height: 100%;
}
.credits {
  color: #fff;
  text-align: right;
}
.credits a {
  color: inherit;
  display: inline-block;
  text-decoration: none;
  border-bottom: 1px solid #fff;
}
